<Window x:Class="HobbitSpeedrunTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HobbitSpeedrunTools" Height="320" Width="600" MinHeight="320" MinWidth="600" ResizeMode="CanResizeWithGrip" Style="{DynamicResource CustomWindowStyle}" Background="{StaticResource dark1}" Icon="../../img/icon.png" SizeToContent="Manual">
    <Grid Height="auto" Margin="10,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Label x:Name="lblCheats" Content="Cheats" Width="auto" VerticalAlignment="Top" FontSize="22" HorizontalContentAlignment="Left" FontFamily="{StaticResource header}"/>
            <CheckBox x:Name="cbxDevMode" Content="Developer Mode" HorizontalAlignment="Stretch" Margin="0,50,0,0" VerticalAlignment="Top" Click="cbxDevMode_Click"/>
            <CheckBox x:Name="cbxInfiniteJumpAttack" Content="Infinite Jumpattacks" HorizontalAlignment="Stretch" Margin="0,75,0,0" VerticalAlignment="Top" Click="cbxInfiniteJumpAttack_Click"/>
            <CheckBox x:Name="cbxRenderLoadTriggers" Content="Render Load Triggers" HorizontalAlignment="Stretch" Margin="0,100,0,0" VerticalAlignment="Top" Click="cbxRenderLoadTriggers_Click"/>
            <CheckBox x:Name="cbxRenderOtherTriggers" Content="Render Other Triggers" HorizontalAlignment="Stretch" Margin="0, 125,0,0" VerticalAlignment="Top" Click="cbxRenderOtherTriggers_Click"/>
            <CheckBox x:Name="cbxRenderPolycache" Content="Render Polycache" HorizontalAlignment="Stretch" Margin="0, 150,0,0" VerticalAlignment="Top" Click="cbxRenderPolycache_Click"/>
            <CheckBox x:Name="cbxAutoResetSigns" Content="Automatically Reset Signs" HorizontalAlignment="Stretch" Margin="0, 175,0,0" VerticalAlignment="Top" Click="cbxAutoResetSigns_Click"/>
            <CheckBox x:Name="cbxInvincibility" Content="Invincibility" Margin="0,199,0,0" VerticalAlignment="Top" Click="cbxAutoResetSigns_Click"/>
        </Grid>
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <Grid >
                <Label x:Name="lblManageSaves" Content="Manage Saves" Width="auto" VerticalAlignment="Top" FontSize="22" FontFamily="{StaticResource header}" HorizontalContentAlignment="Left"/>
                <Label x:Name="lblSaveCollection" Content="Save Collection" HorizontalAlignment="Stretch" Margin="0,50,0,0" VerticalAlignment="Top" Width="auto" Padding="0,0,0,0"/>
                <ComboBox x:Name="cbxSaveCollections" HorizontalAlignment="Stretch" Margin="0,80,0,0" VerticalAlignment="Top" Width="auto" SelectionChanged="cbxSaveCollections_SelectionChanged" Padding="0,0,0,0" IsEnabled="False"/>
                <Label x:Name="lblSaves" Content="Save" HorizontalAlignment="Stretch" Margin="0,125,0,0" VerticalAlignment="Top" Width="auto" Padding="0,0,0,0"/>
                <ComboBox x:Name="cbxSaves" HorizontalAlignment="Stretch" Margin="0,155,0,0" VerticalAlignment="Top" Width="auto" SelectionChanged="cbxSaves_SelectionChanged" IsEnabled="False"/>
                <CheckBox x:Name="cbxManageSaves" Content="" Margin="144,11,0,0" VerticalAlignment="Top" Checked="cbxManageSaves_Checked" Unchecked="cbxManageSaves_Unchecked"/>
            </Grid>
            <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,10,0,0">
                <Label x:Name="lblSettings" Content="Settings" Width="auto" VerticalAlignment="Top" FontSize="22" Margin="0 0 0 10"  FontFamily="{StaticResource header}" HorizontalContentAlignment="Left"/>
                <StackPanel>
                    <Button x:Name="btnOpenConfig" Content="Open Config" Click="btnOpenConfig_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
